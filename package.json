{
  "name": "carbon-addons-cloud-react",
  "main": "lib/index.js",
  "module": "es/index.js",
  "sideEffects": false,
  "license": "Apache-2",
  "files": [
    "es",
    "lib"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "build:storybook": "build-storybook",
    "ci-check": "yarn format:diff && yarn test --runInBand",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "format": "prettier --write \"**/*.{scss,css,js,md,ts}\"",
    "format:diff": "prettier --list-different \"**/*.{scss,css,js,md,ts}\"",
    "precommit": "lint-staged",
    "prepublish": "yarn build",
    "semantic-release": "semantic-release",
    "storybook": "start-storybook -p 3000",
    "test": "jest"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "prop-types": "^15.6.0"
  },
  "peerDependencies": {
    "carbon-addons-cloud": "^1.6.3 || ^2.x || ^3.x",
    "carbon-components-react": "^5.51.9 || ^6.x",
    "react": "^15.3.2 || ^16.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^6.2.0",
    "@commitlint/config-conventional": "^6.1.3",
    "@storybook/addon-actions": "^3.2.15",
    "@storybook/addon-info": "^3.2.14",
    "@storybook/addon-knobs": "^3.2.15",
    "@storybook/addon-links": "^3.2.15",
    "@storybook/addons": "^3.2.14",
    "@storybook/react": "^3.2.14",
    "autoprefixer": "^8.1.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^23.0.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-constant-elements": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "carbon-addons-cloud": "^2.1.0",
    "carbon-components": "^9.5.2",
    "carbon-components-react": "^6.19.0",
    "carbon-icons": "^7.0.7",
    "css-loader": "^0.28.7",
    "enzyme": "^3.1.1",
    "enzyme-adapter-react-16": "^1.0.4",
    "enzyme-to-json": "^3.2.2",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "lint-staged": "^7.1.2",
    "lodash": "^4.17.11",
    "node-sass": "^4.7.2",
    "object-assign": "^4.1.1",
    "postcss-loader": "^2.0.8",
    "prettier": "^1.10.0",
    "promise": "^8.0.1",
    "react": "^16.1.0",
    "react-dom": "^16.1.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "semantic-release": "^15.0.1",
    "storybook-addon-a11y": "^3.1.9",
    "style-loader": "^0.20.2",
    "util-promisify": "^2.1.0",
    "whatwg-fetch": "^2.0.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{scss,css,js,md}": [
      "yarn format",
      "git add"
    ]
  },
  "babel": {
    "presets": [
      "./scripts/env",
      "stage-1",
      "react",
      "flow",
      [
        "env",
        {
          "modules": false,
          "chrome": "latest",
          "edge": "latest",
          "firefox": "latest",
          "safari": "latest",
          "ie": "11",
          "ios": "latest"
        }
      ]
    ],
    "plugins": [
      "transform-object-assign",
      "transform-class-properties",
      "transform-react-constant-elements",
      [
        "transform-object-rest-spread",
        {
          "useBuiltIns": true
        }
      ]
    ]
  },
  "prettier": {
    "jsxBracketSameLine": true,
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/components/**/*.js",
      "!src/components/**/*-story.js"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js",
      "<rootDir>/config/jest/setup.js"
    ],
    "testMatch": [
      "<rootDir>/**/__tests__/**/*.js?(x)",
      "<rootDir>/**/?(*-)(spec|test).js?(x)"
    ],
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/config/jest/jsTransform.js",
      "^.+\\.s?css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "testPathIgnorePatterns": [
      "/config/",
      "/lib/"
    ],
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  }
}
